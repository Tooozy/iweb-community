<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toozy.bbs.mapper.QuestionMapper">
    <insert id="createQuestion" parameterType="com.toozy.bbs.pojo.Question">
        insert into BBS.question (title, description, gmt_create, gmt_modified, creator, tag)
        VALUES (#{title},#{description},#{gmtCreate},#{gmtModified},#{creator},#{tag});
    </insert>

    <select id="queryAllQuestion" resultType="com.toozy.bbs.pojo.Question">
        select *
        from BBS.question
    </select>

    <select id="total" resultType="java.lang.Integer">
        select count(1)
        from BBS.question
    </select>

    <select id="queryAllQuestionByCreatorId" resultType="com.toozy.bbs.pojo.Question">
        select *
        from BBS.question
        where creator = #{creator}
    </select>

    <select id="totalByCreatorId" resultType="java.lang.Integer">
        select count(1)
        from BBS.question
        where creator = #{creator}
    </select>


    <select id="findQuestionById" resultType="com.toozy.bbs.pojo.Question">
        select *
        from BBS.question
        where id = #{id}
    </select>

    <update id="updateQuestion" parameterType="com.toozy.bbs.pojo.Question">
        update BBS.question
        set gmt_modified = #{gmtModified}, title = #{title}, description = #{description}, tag = #{tag}
        where id = #{id};
    </update>

</mapper>