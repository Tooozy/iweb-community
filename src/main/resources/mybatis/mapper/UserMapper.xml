<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toozy.bbs.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.toozy.bbs.pojo.User">
        insert into BBS.user (account_id, name, token, gmt_create, gmt_modified, avatar_url)
        values (#{accountId},#{name},#{token},#{gmtCreate},#{gmtModified},#{avatarUrl});
    </insert>

    <select id="findByToken" resultType="com.toozy.bbs.pojo.User">
        select *
        from BBS.user
        where token = #{token};
    </select>

    <select id="findById" resultType="com.toozy.bbs.pojo.User">
        select *
        from BBS.user
        where id = #{creatorId};
    </select>


    <select id="findByAccountId" resultType="com.toozy.bbs.pojo.User">
        select *
        from BBS.user
        where user.account_id = #{accountId};
    </select>

    <update id="updateUser" parameterType="com.toozy.bbs.pojo.User">
        update BBS.user
        set gmt_modified = #{gmtModified}, avatar_url = #{avatarUrl}, token = #{token}
        where account_id = #{accountId};
    </update>

</mapper>